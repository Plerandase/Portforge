{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "Federated": "arn:aws:iam::023490709500:oidc-provider/oidc.eks.ap-northeast-2.amazonaws.com/id/<EKS_OIDC_ID>"
            },
            "Action": "sts:AssumeRoleWithWebIdentity",
            "Condition": {
                "StringEquals": {
                    "oidc.eks.ap-northeast-2.amazonaws.com/id/<EKS_OIDC_ID>:sub": "system:serviceaccount:default:infra-bot-sa"
                }
            }
        }
    ]
}