# =============================================================================
# Auth Service 환경 설정
# 이 파일을 복사해서 .env로 사용하세요
# =============================================================================

# [App Settings]
PROJECT_NAME=Portforge-Auth
ENV=local
DEBUG=true

# [Database - MySQL]
DATABASE_URL=mysql+aiomysql://root:rootpassword@localhost:3306/portforge_auth

# [AWS]
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# [AWS S3]
S3_BUCKET_TEAM=portforge-team

# [AWS Cognito - Auth (필수)]
COGNITO_USER_POOL_ID=ap-northeast-2_xxxxxxx
COGNITO_APP_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_DOMAIN=your-domain.auth.ap-northeast-2.amazoncognito.com
REDIRECT_URI=http://localhost:3000/#/auth/callback

# [Security - JWT]
JWT_ALGORITHM=RS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWKS_TIMEOUT=10

# [MSA Service URLs - 개발 환경]
AUTH_SERVICE_URL=http://localhost:8000
PROJECT_SERVICE_URL=http://localhost:8001
TEAM_SERVICE_URL=http://localhost:8002
AI_SERVICE_URL=http://localhost:8003
SUPPORT_SERVICE_URL=http://localhost:8004

# [CORS]
CORS_ORIGINS=*
