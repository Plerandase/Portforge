# =============================================================================
# Support & Communication Service 환경 설정
# 이 파일을 복사해서 .env로 사용하세요
# =============================================================================

# [App Settings]
PROJECT_NAME=Portforge-Support
ENV=local
DEBUG=true

# [Database - MySQL]
DATABASE_URL=mysql+aiomysql://root:rootpassword@localhost:3306/portforge_support

# [AWS]
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# [AWS S3/DynamoDB - 로컬 개발용]
S3_ENDPOINT_URL=http://localhost:9000
DDB_ENDPOINT_URL=http://localhost:8089

# [AWS Cognito - JWT 검증용]
COGNITO_REGION=ap-northeast-2
COGNITO_USERPOOL_ID=ap-northeast-2_xxxxxxx
COGNITO_APP_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# [Security - JWT]
JWT_ALGORITHM=RS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# [MSA Service URLs - 개발 환경]
AUTH_SERVICE_URL=http://localhost:8000
PROJECT_SERVICE_URL=http://localhost:8001
TEAM_SERVICE_URL=http://localhost:8002
AI_SERVICE_URL=http://localhost:8003
SUPPORT_SERVICE_URL=http://localhost:8004

# [CORS]
CORS_ORIGINS=*
